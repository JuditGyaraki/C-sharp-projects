<Page x:Class="FitnessApp.Bmi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bmi">
    

    <StackPanel Margin="20">
        <TextBlock HorizontalAlignment="Left" FontSize="20">BMI Calculator</TextBlock>
        <TextBlock Width="100" x:Name="BmiBlock" FontSize="18"></TextBlock>
        <TextBlock FontSize="15">Gewicht in kg:</TextBlock>
        <TextBox Width="50" HorizontalAlignment="Left" x:Name="GewichtBox" TextChanged="GewichtBox_TextChanged"></TextBox>
        <TextBlock FontSize="15">Lengte in cm:</TextBlock>
        <TextBox Width="50" HorizontalAlignment="Left" x:Name="LengteBox" TextChanged="LengteBox_TextChanged"></TextBox>
    </StackPanel>




</Page>
