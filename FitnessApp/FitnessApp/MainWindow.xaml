<Window x:Class="FitnessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450" Background="Beige">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFF5C0FF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0, 5, 0, 5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Width" Value="200" />
        </Style>
        
    </Window.Resources>
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="btn_bmi" Click="bmi_btn_click">BMI</Button>
        <Button x:Name="btn_hartslagzones" Click="hartslagzones_btn_click">Hartslagzones</Button>
        <Button x:Name="btn_dagelijkse_calorie_verbruik" Click="daCaVe_btn_click">Dagelijkse calorie verbruik</Button>
        <Frame Name="frame" NavigationUIVisibility="Hidden" />
       

    </StackPanel>
</Window>
