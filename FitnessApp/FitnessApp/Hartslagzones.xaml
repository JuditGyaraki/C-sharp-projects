<Page x:Class="FitnessApp.Hartslagzones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Hartslagzones">
    <StackPanel Margin="20">
        <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Hartslagzones calculator</TextBlock>
        <TextBlock Width="70" Height="50" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Bottom">Leeftijd:</TextBlock>
        <TextBox TextAlignment="Center" HorizontalAlignment="Left" Width="50" Height="19" x:Name="LeeftijdBox" TextChanged="LeeftijdBox_TextChanged"></TextBox>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" x:Name="Zone5" Background="Red"></TextBlock>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" x:Name="Zone4" Background="Orange"></TextBlock>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" x:Name="Zone3" Background="LightBlue"></TextBlock>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" x:Name="Zone2" Background="LightGreen"></TextBlock>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" x:Name="Zone1" Background="LightGray"></TextBlock>
        <TextBlock HorizontalAlignment="Left" Width="300" Height="46" FontSize="10" TextWrapping="Wrap" Foreground="Gray">De berekende zones zijn een algemene benadering en kunnen induvidueel afwijken. Contacteer een sportarts om je persoonlijke hartslagzones precies te meten.</TextBlock>
    </StackPanel>
</Page>
