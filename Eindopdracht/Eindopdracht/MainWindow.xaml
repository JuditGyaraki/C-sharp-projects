<Window x:Class="Eindopdracht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eindopdracht"
        mc:Ignorable="d"
        Title="Eindopdracht" Height="600" Width="850" Background="BurlyWood">
    
    <StackPanel Margin="20">

        <TextBlock HorizontalAlignment="Center" FontSize="40" Foreground="Brown" FontWeight="Bold" FontStyle="Italic">BESTELLINGEN</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn_BestellingToevoegen" Click="ClickBestellingToevoegen" Height="40" Width="200" FontSize="15" Foreground="Brown" Background="DarkKhaki" >Bestelling toevoegen</Button>
            <TextBlock Height="40"></TextBlock>
            <Button x:Name="btn_BestellingWijzigen" Click="ClickBestellingWijzigen" Height="40"  Width="200" FontSize="15" Foreground="Brown" Background="DarkGray">Bestelling wijzigen</Button>
            <TextBlock Height="40"></TextBlock>
            <Button Height="40"  Width="200" FontSize="15" Foreground="Brown" Background="BlanchedAlmond" Click="ClickBestellingVerwijderen">Bestelling verwijderen</Button>
            <TextBlock Height="40"></TextBlock>
            <Button Click="ClickAfrekenen" Height="40"  Width="200" FontSize="15" FontWeight="Bold" Background="IndianRed">Afrekenen</Button>
        </StackPanel>
        <TextBlock x:Name="Test" Height="50"></TextBlock>
        <Frame Name="frame" NavigationUIVisibility="Hidden" />
    </StackPanel>
    
</Window>
