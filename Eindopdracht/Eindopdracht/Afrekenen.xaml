<Page x:Class="Eindopdracht.Afrekenen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eindopdracht"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Afrekenen">
    <Page.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="IndianRed" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0, 5, 0, 5" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Page.Resources>
    <StackPanel>
        <TextBlock Height="30" Width="80">Tafelnummer: </TextBlock>
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="tbx_TafelnrAfrekenen" Height="30" Width="40"></TextBox>
        <ListBox x:Name="lb_Afrekenen" MouseDoubleClick="bestelling_MouseDoubleClick"></ListBox>
        <TextBlock x:Name="tbk_Totaalprijs" Width="140">Totaalprijs:</TextBlock>
        <Button x:Name="btn_Afrekenen" Width="70" Click="Click_Afrekenen" HorizontalAlignment="Right">Afrekenen</Button>
        <ListBox x:Name="lb_AfrekenenPerProduct"></ListBox>
        <TextBlock x:Name="tbk_TotaalprijsIndividueel" Width="140">Totaalprijs:</TextBlock>
        <Button Width="70" Click="click_Betalen" HorizontalAlignment="Right">Betalen</Button>
        <TextBlock>Geef de tafelnummer dan click op Afrekenen. Dubbelclick per item om te betalen. Dan click op Betalen.</TextBlock>
        
    </StackPanel>
</Page>
