<Page x:Class="Eindopdracht.BestellingWijzigen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eindopdracht"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BestellingWijzigen">

    <StackPanel>
        <TextBlock  Height="30" Width="80" >Tafelnummer:</TextBlock>
        <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30" Width="40" x:Name="tbx_tafelnrWijzigen" TextChanged="Tafelnummer_TextChanged"></TextBox>
        <TextBlock>Welke item wil je wijzigen? (een click)</TextBlock>
        <ListBox  Foreground="Brown" Background="DarkGray" x:Name="lb_BestellingWijzigen"></ListBox>
        <TextBlock>Kies een nieuwe item (dubbelclick)</TextBlock>
        <ListBox  Foreground="Brown" Background="DarkGray" x:Name="lb_Menu" MouseDoubleClick="menu_MouseDoubleClick"></ListBox>
    </StackPanel>
</Page>
