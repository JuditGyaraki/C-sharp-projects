<Page x:Class="Eindopdracht.BestellingToevoegen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eindopdracht"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BestellingToevoegen">

    <StackPanel Margin="20">
        <ListBox Background="DarkKhaki" Foreground="Brown" x:Name="lb_MenuDranken"></ListBox>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="tbk_tafelnummer" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left">Tafelnummer:</TextBlock>
            <TextBox Margin="20,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="tbx_tafelnummer" Width="30"></TextBox>
            <Button Margin="20,0,0,0" Click="btn_ToevoegenAanBestelling" x:Name="btn_Toevoegen" Width="70" Content="Toevoegen" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-1.006"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="btn_bestellingOpslaan" Margin="20, 0, 0, 0" Width="110"  Click="btn_BestellingOpslaan">Bestelling Opslaan</Button>
        </StackPanel>
        <TextBlock Height="50"></TextBlock>
        <TextBlock x:Name="tbx_HuidigeBestelling" Height="80"></TextBlock>




    </StackPanel>
</Page>
