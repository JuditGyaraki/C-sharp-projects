<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5, 20, 5, 20" />
            <Setter Property="Height" Value="22" />
            <Setter Property="Width" Value="120" />
            <Setter Property="Background" Value="Beige" />
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,20,5,20"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Background" Value="BlueViolet" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>
    <StackPanel>
        <ListBox Background="Lavender" Margin="20" x:Name="lb_Movies" Height="100" MouseDoubleClick="movies_MouseDubbelClick">
        </ListBox>
        <StackPanel>
            <Button Background="Red" Margin="20,5,20,5" HorizontalAlignment="Left" Width="67" Height="23" x:Name="btn_delete" Click="DeleteMovieButton_Click">Delete</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="tbx_naam"></TextBox>
            <TextBox x:Name="tbx_releaseJaar" Width="50"></TextBox>
            <TextBox x:Name="tbx_genre"></TextBox>
            <TextBox x:Name="tbx_regisseur"></TextBox>
            <TextBox x:Name="tbx_speelduur" Width="50"></TextBox>
            <Button x:Name="btn_add" Click="AddMovieButton_Click">Add</Button>
            <Button x:Name="btn_update" Click="UpdateMovieButton_Click">Update</Button>
        </StackPanel>
    </StackPanel>
</Window>
